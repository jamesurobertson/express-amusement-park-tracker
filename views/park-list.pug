extends layout
block content
  a(href='/park/add' class='btn btn-secondary') Add Park
  table(class='table table-striped table-hover')
    thead(class='thead-dark')
      tr
        th(scope='col') Park Name
        th(scope='col') Location
        th(scope='col') Opened
        th(scope='col')
    tbody
      each park in parks
        tr
          td= park.parkName
          td= `${park.city}, ${park.provinceState} ${park.country}`
          td= park.opened
          td
            a(href=`/park/${park.id}` class='btn btn-dark') Details
