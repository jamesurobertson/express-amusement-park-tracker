extends layout.pug

block content
  h3= park.parkName
  div
    ul
      li Location: #{park.city}, #{park.provinceState}, #{park.country}
      li Opened: #{park.opened}
      li Size: #{park.size}
  div
    p= park.description
  div
    a(href=`/park/edit/${park.id}` class='btn btn-primary' role='button') Edit
    a(href=`/park/delete/${park.id}` class='btn btn-danger ml-2' role='button') Delete
    a(href='/parks' class='btn btn-warning ml-2' role='button') Return to List
