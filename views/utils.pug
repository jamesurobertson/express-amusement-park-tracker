
mixin textField(labelText, fieldName, fieldValue, isMultiline, fieldPlaceholder)
  div(class='form-group')
    label(for=fieldName) #{labelText}
    if isMultiline
      textarea(id=fieldName name=fieldName value=fieldValue class='form-control')
    else
      input(type='text' id=fieldName name=fieldName value=fieldValue placeholder=fieldPlaceholder class='form-control')


mixin checkForErrors(errors)
  if errors
    div(class='alert alert-danger')
      p The following error(s) occurred:
      ul
        each error in errors
          li= error
